#!/bin/bash

# Qdrant Vector Store - Stop Script
# Can be run from anywhere

set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
QDRANT_DIR="$(dirname "$SCRIPT_DIR")"  # qdrant_docker directory

echo "üõë Stopping Qdrant Vector Store..."

# Check if container is running
if ! docker ps | grep -q qdrant-vector-store; then
    echo "‚ÑπÔ∏è  Qdrant container is not running"
    exit 0
fi

# Stop Qdrant container
echo "üì¶ Stopping Qdrant container..."
cd "$QDRANT_DIR"
docker-compose stop

echo "‚úÖ Qdrant stopped successfully"
echo ""
echo "To start again: $SCRIPT_DIR/vector_store_start"
echo "To remove container: cd $QDRANT_DIR && docker-compose down"
echo "To view status: cd $QDRANT_DIR && docker-compose ps"


